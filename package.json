{
  "name": "evolve-electron",
  "version": "v1.2.2",
  "description": "an electron version of evolve game",
  "homepage": "https://github.com/XiaofengdiZhu/evolve-electron",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "node builder.js"
  },
  "author": "销锋镝铸",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/XiaofengdiZhu/evolve-electron.git"
  },
  "build": {
    "appId": "xfdz.evolve-electron",
    "copyright": "Copyright © 2023 销锋镝铸",
    "files": [
      "MegaEvolve/**",
      "index.html",
      "ga4mp.js",
      "main.js",
      "preload.js"
    ],
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "XiaofengdiZhu",
          "repo": "evolve-electron"
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "${name}",
      "runAfterFinish": false
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "@electron/fuses": "^1.6.1",
    "electron-chrome-extensions": "^3.10.1",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "ga4-mp": "^1.0.3",
    "uuid": "^9.0.0"
  }
}
